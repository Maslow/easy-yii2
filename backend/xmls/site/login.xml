<model>
    <page>Login</page>
    <login_form>
        <form_id>login_form</form_id>
        <submission>
            <action>/site/login</action>
            <method>POST</method>
            <csrf>
                <param><?php echo $this->getCsrfParam();?></param>
                <token><?php echo $this->getCsrfToken();?></token>
            </csrf>
        </submission>
        <username>
            <id>username</id>
            <label>用户名</label>
            <value>rocky</value>
        </username>
        <password>
            <label>密码</label>
            <id>password</id>
            <value/>
        </password>
        <remember_me>
            <Label>下次记住登录</Label>
            <id>rememberMe</id>
            <value>1</value>
        </remember_me>
        <captcha>
            <label>验证码</label>
            <id>captcha</id>
            <url><?php echo $this->to(['site/captcha'])?></url>
        </captcha>
    </login_form>
    <login_result>
        <failed>
            <tip>
                <username>用户名不正确</username>
                <password>密码不正确</password>
                <captcha>验证码不正确</captcha>
                <other>操作过于频繁，请稍后再试！</other>
            </tip>
        </failed>
    </login_result>
</model>